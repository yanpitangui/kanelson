@Render(GithubId, Name)

@code {

    [Parameter]
    public string GithubId { get; set; } = null!;

    [Parameter] 
    public string Name { get; set; } = null!;
    
    RenderFragment Render(string nameIdentifier, string name)
    {
        return
            @<MudTooltip Text="@name">
                <MudAvatar Style="margin-right: 5px">
                    <MudImage Src="@GetUrlFromId(nameIdentifier)"/>
                </MudAvatar>
            </MudTooltip>;
    }

    public static string GetUrlFromId(string nameIdentifier)
    {
        var url = $"https://avatars.githubusercontent.com/u/{nameIdentifier}";
        return url;
    }
}