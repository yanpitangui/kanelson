@using Kanelson.Contracts.Models

<MudCard>
    <MudCardHeader Class="question-header">(@Info.CurrentNumber/@Info.MaxNumber) @Info.Question.Name</MudCardHeader>
    <MudCardContent>
        <MudGrid>
            @for (int i = 0; i < Info.Question.Answers.Count; i++)
            {
                var answer = Info.Question.Answers[i];
                var i1 = i;
                <MudItem xs="12" sm="6">
                    <AnswerComponent Answer="answer" OnClickCallback="AnswerClickCallback" Idx="@i1"/>
                </MudItem>
            }
        
        </MudGrid>
    </MudCardContent>
</MudCard>




@code {
    [Parameter]
    public CurrentQuestionInfo Info { get; set; } = null!;
    

    [Parameter]
    public EventCallback<Guid> AnswerClickCallback { get; set; }

}




