@using Kanelson.Models
@inject IStringLocalizer<Shared> Loc
<MudCard>
    
    @if (Info.Question.ImageUrl != null)
    {
    
    
        <MudStack AlignItems="AlignItems.Center">
            <MudCardHeader>
                <MudImage Src="@Info.Question.ImageUrl"/>
            </MudCardHeader>
        </MudStack>


    }
    <MudCardHeader Class="question-header">(@Info.CurrentNumber/@Info.MaxNumber) @Info.Question.Name</MudCardHeader>
    <MudCardContent>
        <MudGrid>
            @for (int i = 0; i < Info.Question.Alternatives.Count; i++)
            {
                var alternative = Info.Question.Alternatives[i];
                var i1 = i;
                <MudItem xs="12" sm="6">
                    <AlternativeComponent Alternative="alternative" OnClickCallback="AnswerClickCallback" Idx="@i1"/>
                </MudItem>
            }

        </MudGrid>
    </MudCardContent>
</MudCard>




@code {
    [Parameter]
    public CurrentQuestionInfo Info { get; set; } = null!;
    

    [Parameter]
    public EventCallback<Guid> AnswerClickCallback { get; set; }

}




