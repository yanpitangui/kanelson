@Render(GithubId)

@code {

    [Parameter]
    public string GithubId { get; set; } = null!;
    
    RenderFragment Render(string nameIdentifier)
    {
        return @<MudAvatar Style="margin-right: 5px" Image="@GetUrlFromId(nameIdentifier)"/>;
    }

    public static string GetUrlFromId(string nameIdentifier)
    {
        var url = $"https://avatars.githubusercontent.com/u/{nameIdentifier}";
        return url;
    }
}