@using Kanelson.Contracts.Models


<MudGrid>
    @for(int i = 0; i< Question.Answers.Count; i ++)
    {
        var answer = Question.Answers[i];
        var i1 = i;
        <MudItem xs="12" sm="6">
            <AnswerComponent Answer="answer" OnClickCallback="AnswerClickCallback" Idx="@i1"/>
        </MudItem>
    }
    
</MudGrid>



@code {
    [Parameter]
    public Question Question { get; set; } = null!;
    

    [Parameter]
    public EventCallback<Guid> AnswerClickCallback { get; set; }

}




