@using Kanelson.Contracts.Models



<style>
    .answer-description {
        font-size: 2.5vh;
        color: white;
        font-weight: bolder;
    }
    
    .question-header {
        font-size: 3vh;
        color: black;
        background-color: oldlace;
        display: flex;
        flex-direction: column;
    
    }
    
</style>


<MudCard>
    <MudCardHeader Class="question-header">@Question.Name</MudCardHeader>
    <MudCardContent>
        <MudGrid>
            @for (int i = 0; i < Question.Answers.Count; i++)
            {
                var answer = Question.Answers[i];
                var i1 = i;
                <MudItem xs="12" sm="6">
                    <AnswerComponent Answer="answer" OnClickCallback="AnswerClickCallback" Idx="@i1"/>
                </MudItem>
            }
        
        </MudGrid>
    </MudCardContent>
</MudCard>




@code {
    [Parameter]
    public Question Question { get; set; } = null!;
    

    [Parameter]
    public EventCallback<Guid> AnswerClickCallback { get; set; }

}




